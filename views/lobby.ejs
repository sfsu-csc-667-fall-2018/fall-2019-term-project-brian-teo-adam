<!DOCTYPE html>
<html>
  <head>
    <title>Simple Group Chat on Node.js</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font: 13px Helvetica, Arial; }
        form { background: #fff; padding: 3px; position: fixed; bottom: 0; width: 100%; border-color: #000; border-top-style: solid; border-top-width: 1px;}
        form input { border-style: solid; border-width: 1px; padding: 10px; width: 55%; margin-right: .5%; }
        form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; margin-left: 2%; }
        #messages { list-style-type: none; margin: 0; padding: 0; }
        #messages li { padding: 5px 10px; }
        #messages li:nth-child(odd) { background: #eee; }
    </style>
    <script src="../../socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
  </head>
<body>
<div class="container">
    <div class="split left">
        <h1 class="my-4 text-center text-lg-left">Current Games</h1>
        </br>
        <div class="current_games"></div>
    </div>
    <div class="split right">
        <h1 class="my-4 text-center text-lg-left">Chat</h1>
        <ul id="messages"></ul>
        <form action="">
            <input id="text" autocomplete="off"/>
            <button>Send</button>
        </form>
    </div>
</div>

<script>
    var socket = io.connect('http://localhost:8080');
            // submit text message without reload/refresh the page
            $('form').submit(function(event){
                event.preventDefault(); // prevents page reloading
                socket.emit('chat message', {text:$('#text').val(),socketid:socket.id);
                $('#text').val('');
                return false;
            });
            // append the chat text message
            socket.on('chat_message', function(msg){
                $('#messages').append($('<li>').text(msg.username+": "+msg.message));
            });
</script>
<script src="/javascripts/lobby_actions.js"></script>
</body>
</html>